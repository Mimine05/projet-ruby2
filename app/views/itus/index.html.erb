<p id="notice"><%= notice %></p>

<h1>Itus</h1>

<table>
    <thead>
        <tr>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @itus.each do |itu| %>
        <tr>
            <td><%= itu.name %></td>
            <td><%= link_to 'Show', itu %></td>
            <td><%= link_to 'Edit', edit_itu_path(itu) %></td>
            <td><%= link_to 'Destroy', itu, method: :delete, remote: true %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Itu', new_itu_path %>
