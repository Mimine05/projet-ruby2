<p id="notice"><%= notice %></p>

<h1>Intérêts</h1>

<table class="table">
    <thead>
        <tr>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @itus.each do |itu| %>
        <tr>
            <td><%= itu.name %></td>
            <td><%= link_to 'Afficher', itu, class: 'btn btn-warning' %></td>
            <% if current_user.role == 'Admin' %>
            <td><%= link_to 'Editer', edit_itu_path(itu), class: 'btn btn-info' %></td>
            <td><%= link_to 'Supprimer', itu, method: :delete, remote: true, class: 'btn btn-danger' %></td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>

<% if current_user.role == 'Admin' %>
<%= link_to 'Nouvelle association', new_itu_path, class: 'btn btn-success' %>
<% end %>