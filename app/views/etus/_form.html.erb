<%= simple_form_for(@etu) do |f| %>
  <%= f.error_notification %>

	<div class="row">

		<div class="form-group">
	    <%= f.label 'Année de début et de fin', class: 'col-sm-2 control-label'  %>
	        <div class="col-sm-6">
	        <%= f.text_field :annee, class: 'form-control' %>
	        </div>
	    </div><br><br>

	    <div class="form-group">
	    <%= f.label 'Entreprise', class: 'col-sm-2 control-label'  %>
	        <div class="col-sm-6">
	        <%= f.text_field :lieu, class: 'form-control' %>
	        </div>
	    </div><br><br>

	    <div class="form-group">
	    <%= f.label 'Description des missions', class: 'col-sm-2 control-label'  %>
	        <div class="col-sm-6">
	        <%= f.text_field :description, class: 'form-control' %>
	        </div>
	    </div><br><br>
	</div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>
  </div><br>
<% end %>
