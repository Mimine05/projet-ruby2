<p id="notice"><%= notice %></p>

<table class="table">
    <tbody>
        <tr>
            <td>
                <% if current_user.avatar_file_name.nil? %>
                Pas d'images
                <% else %>
                <%= image_tag @user.avatar.url(:medium) %>
                <% end %>
            </td>
            <td>
                <h1><%= @user.username %></h1><br>
                <%= @user.description %>
            </td>
        </tr>
    </tbody>
</table>



<table class="table">
    <thead>
        <tr>
            <td>Nom</td>
            <td>Etablissement</td>
            <td>Année d'obtention</td>
            <td>Description</td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </thead>

    <tbody>
        <h3>Formations</h3>
        <% @formations.each do |formation| %>
        <tr>
            <td><%= formation.name %></td>
            <td><%= formation.ftus.where(formation_id: formation.id).first.etablissement %></td>
            <td><%= formation.ftus.where(formation_id: formation.id).first.annee %></td>
            <td><%= formation.ftus.where(formation_id: formation.id).first.description %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<table class="table">
    <thead>
        <tr>
            <td>Nom</td>
            <td>Entreprise</td>
            <td>Dates</td>
            <td>Description</td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </thead>

    <tbody>
        <h3>Expériences</h3>
        <% @user.experiences.each do |experience| %>
        <tr>
            <td><%= experience.name %></td>
            <td><%= experience.etus.where(experience_id: experience.id).first.lieu %></td>
            <td><%= experience.etus.where(experience_id: experience.id).first.annee %></td>
            <td><%= experience.etus.where(experience_id: experience.id).first.description %></td></tr>
        <% end %>
    </tbody>
</table>

<table class="table">
    <thead>
        <tr>
            <td>Catégorie</td>
            <td>Nom</td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </thead>

    <tbody>
        <h3>Intérêts</h3>
        <% @user.interets.each do |interet| %>
        <tr>
            <td><%= interet.categorie %></td>
            <td><%= interet.itus.where(interet_id: interet.id).first.name %></td></tr>
        <% end %>
    </tbody>
</table>

