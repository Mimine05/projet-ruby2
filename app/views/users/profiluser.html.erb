<p id="notice"><%= notice %></p>

<h1>Mon profil - <%= @user.username %></h1>

<% if current_user.avatar_file_name.nil? %>
Pas d'images
<% else %>
<%= image_tag @user.avatar.url %>
<% end %>

<h3>Ma présentation :</h3>
<%= @user.description %><br>
<%= link_to 'Afficher', user_path %>    <%= link_to 'Editer', edit_user_registration_path %>
<% if !is_entreprise %>
<h3>Mes Formations</h3>
<table>
    <thead>
        <tr>
            <td>Nom</td>
            <td>Etablissement</td>
            <td>Année d'obtention</td>
            <td>Description</td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody class="renderUserFormationList">
        <%= render partial: 'userFormationlist' , locals: {user: @user} %>
    </tbody>
</table>
<% @formations.each do |f| %>
<%= link_to "Ajouter "+f.name.to_s, {controller: "users", action: "addformation", formation_id: f.id} ,remote: true %>
<% end %>


