<p id="notice"><%= notice %></p>

<h1>Interets</h1>

<table>
  <thead>
    <tr>
      <td>Catégories</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interets.each do |interet| %>
      <tr>
        <td><%= interet.categorie %></td>
        <td><%= link_to 'Afficher', interet %></td>
        <td><%= link_to 'Editer', edit_interet_path(interet) %></td>
        <td><%= link_to 'Supprimer', interet, method: :delete, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvel Intérêt', new_interet_path %>
