<p id="notice"><%= notice %></p>

<p>
  <strong>Intérêt :</strong>
  <%= @interet.categorie %>
</p>

<b>Personnes ayant cet intérêt :</b><br>
<% @user.each do |user| %>
    <tr>
        <td><%= user.username %></td>
        <td><%= link_to 'Afficher', {controller: "users", action: "profil", user_id: user.id}, class: 'btn btn-warning' %></td>
    </tr>
<% end %>
<br><br>

<% if current_user.role == 'Admin' %>
<%= link_to 'Editer', edit_interet_path(@interet), class: 'btn btn-info' %> |<% end %>
<%= link_to 'Retour', interets_path, class: 'btn btn-default' %>
