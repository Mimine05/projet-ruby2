<h2>Inscrivez-vous</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= f.error_notification %>

                <div class="form-inputs">
                <div class="form-group">
                        <div class="col-sm-6">
                        <%= f.input :role, collection: ['Particulier', 'Entreprise'], selected: 'Particulier', label: "Vous êtes : ", class: "form-control", required: true %>
                        </div>
                    </div><br><br>

                    <div class="form-group">
                    <%= f.label "Nom complet ou de l'Entreprise", class: 'col-sm-2 control-label'  %>
                        <div class="col-sm-6">
                        <%= f.text_field :username, class: "form-control", required: true %>
                        </div>
                    </div><br><br>

                    <div class="form-group">
                    <%= f.label 'Email', class: 'col-sm-2 control-label'  %>
                        <div class="col-sm-6">
                        <%= f.email_field :email, class: "form-control", required: true, autofocus: true %>
                        </div>
                    </div><br><br>

                    <div class="form-group">
                    <%= f.label 'Mot de Passe', class: 'col-sm-2 control-label'  %>
                        <div class="col-sm-6">
                    <%= f.password_field :password, autocomplete: "off", class: "form-control", hint: "Laissez la case vide si vous ne souhaitez pas changer votre mot de passe", required: true, hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length) %>
                    </div>
                    </div><br><br>

                    <div class="form-group">
                    <%= f.label 'Confirmer votre mot de passe', class: 'col-sm-2 control-label'  %>
                        <div class="col-sm-6">
                    <%= f.password_field :password_confirmation, class: "form-control", required: true %>
                    </div>
                    </div><br><br>
                </div>

                <div class="form-actions">
                    <%= f.button :submit, "S'inscrire" %>
                </div>
                <%= render "users/shared/links" %>
<% end %>
