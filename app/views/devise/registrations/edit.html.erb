<h2>Editer vos informations</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
    <div class="form-group">
        <div class="col-sm-6">
            <%= f.input :avatar, as: :file %>
        </div>
    </div><br><br><br>

    <div class="form-group">
    <%= f.label 'Nom', class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
        <%= f.text_field :username, class: "form-control" %>
        </div>
    </div><br><br>

    <div class="form-group">
    <%= f.label 'Présentation', class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
        <%= f.text_field :description, class: "form-control" %>
        </div>
    </div><br><br>

    <div class="form-group">
    <%= f.label 'Email', class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
        <%= f.email_field :email, class: "form-control" %>
        </div>
    </div><br><br>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <div class="form-group">
    <%= f.label 'Nouveau Mot de Passe', class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", hint: "Laissez la case vide si vous ne souhaitez pas changer votre mot de passe", required: false %>
    </div>
    </div><br><br>

    <div class="form-group">
    <%= f.label 'Confirmer votre mot de passe', class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
    <%= f.password_field :password_confirmation, class: "form-control", required: false %>
    </div>
    </div><br><br>

    <div class="form-group">
    <%= f.label 'Mot de passe actuel*', class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
    <%= f.password_field :current_password, class: "form-control", hint: "Vous devez entrer votre mot de passe pour enregistrer.", required: true %>
    </div>
    </div><br><br>

</div>

<div class="form-actions">
    <%= f.button :submit, "Enregistrer", class: 'btn btn-info' %>
</div>
<% end %>

<h3>Supprimer mon compte</h3>

<p>Mécontent ? <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes-vous sûr ?" }, method: :delete, class: 'btn btn-danger' %></p>

<%= link_to "Retour", :back, class: 'btn btn-default' %>
