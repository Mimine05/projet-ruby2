<h2>Se connecter</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
		<div class="form-group">
        <%= f.label 'Email', class: 'col-sm-2 control-label'  %>
            <div class="col-sm-6">
            <%= f.text_field :email, class: "form-control", required: true, autofocus: true %>
            </div>
        </div><br><br>

        <div class="form-group">
        <%= f.label 'Mot de Passe', class: 'col-sm-2 control-label'  %>
            <div class="col-sm-6">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", hint: "Laissez la case vide si vous ne souhaitez pas changer votre mot de passe", required: true, hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length) %>
        </div>
        </div><br><br>

	    <div class="form-group">
		    <div class="col-sm-6">   
		    	<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
		    </div>
	    </div>
  </div><br><br>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
