<%= simple_form_for(@formation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
      <%= f.input :name, required: true %>
      <%= f.input :etablissement %>
      <%= f.input :annee %>
      <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
