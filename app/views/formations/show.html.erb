<p id="notice"><%= notice %></p>

<h3>
    <strong>Formation :</strong>
    <%= @formation.name %>
</h3>

<b>Personnes ayant suivi cette formation :</b><br>
<% @user.each do |user| %>
    <tr>
        <td><%= user.username %></td>
        <td><%= link_to 'Afficher', {controller: "users", action: "profil", user_id: user.id}, class: 'btn btn-warning' %></td>
    </tr>
<% end %>
<br><br>

<% if current_user.role == 'Admin' %>
<%= link_to 'Editer', edit_formation_path(@formation), class: 'btn btn-info' %> |<% end %>
<%= link_to 'Retour', formations_path, class: 'btn btn-default' %>
